<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MVPStudio_Creative_Agency.Views.ProjectsManagementPage"
             Title=""
             BackgroundColor="{DynamicResource PurpleLighter}">
<HorizontalStackLayout
        BackgroundColor="#EBEBFD"
        HeightRequest="700"
        HorizontalOptions="FillAndExpand">
        <!--  border radius????? wtf  -->
        <Label
            Margin="80,50,0,0"
            FontSize="20"
            Text="Projects" />
        <Border StrokeShape="RoundRectangle 5,5,5" StrokeThickness="0">
            <Grid
                Margin="-70,0,0,0"
                BackgroundColor="#F2F2FD"
                HeightRequest="520"
                StyleClass="rectangle"
                WidthRequest="1200"
                ZIndex="2">

                <FlexLayout AlignItems="Start">
                    <!--  vertical and hoz boxes for the project cards  -->

                    <Border StrokeShape="RoundRectangle 10,10,10,10">
                        <Grid
                            Margin="30,30,0,0"
                            BackgroundColor="#EBEBFD"
                            HeightRequest="300"
                            HorizontalOptions="Start"
                            WidthRequest="300">
                            <Image
                                Margin="0,-100,0,0"
                                HeightRequest="50"
                                Source="dotnet_bot.png" />
                            <Label Margin="20,10,0,0" Text="10 August 2023" />
                            <Label
                                Margin="0,150,0,0"
                                FontAttributes="Bold"
                                HorizontalOptions="Center"
                                Text="Website build" />
                            <Label
                                Margin="0,180,0,0"
                                HorizontalOptions="Center"
                                Text="Updates to nav" />

                            <!--  PROGRESS SECTION  -->
                            <Label Margin="20,210,0,0" Text="Progress - 40%" />
                            <ProgressBar
                                Margin="10,195,10,10"
                                Progress="0.4"
                                ProgressColor="#fff" />
                            <Image
                                Margin="20,240,0,0"
                                HeightRequest="37"
                                HorizontalOptions="Start"
                                Source="dotnet_bot.png" />
                        </Grid>
                    </Border>
                    <Border StrokeShape="RoundRectangle 10,10,10,10">
                        <Grid
                            Margin="30,30,0,0"
                            BackgroundColor="#EBEBFD"
                            HeightRequest="300"
                            HorizontalOptions="Start"
                            WidthRequest="300">
                            <Image
                                Margin="0,-100,0,0"
                                HeightRequest="50"
                                Source="dotnet_bot.png" />
                            <Label Margin="20,10,0,0" Text="10 August 2023" />
                            <Label
                                Margin="0,150,0,0"
                                FontAttributes="Bold"
                                HorizontalOptions="Center"
                                Text="Website build" />
                            <Label
                                Margin="0,180,0,0"
                                HorizontalOptions="Center"
                                Text="Updates to nav" />

                            <!--  PROGRESS SECTION  -->
                            <Label Margin="20,210,0,0" Text="Progress - 40%" />
                            <ProgressBar
                                Margin="10,195,10,10"
                                Progress="0.4"
                                ProgressColor="#fff" />
                            <Image
                                Margin="20,240,0,0"
                                HeightRequest="37"
                                HorizontalOptions="Start"
                                Source="dotnet_bot.png" />
                        </Grid>
                    </Border>


                </FlexLayout>
            </Grid>
        </Border>

        <Image
            Margin="-400,0"
            HorizontalOptions="End"
            Source="vectorp.png"
            StyleClass="vectorimg"
        />

    </HorizontalStackLayout>
</ContentPage>
