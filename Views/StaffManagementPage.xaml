<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:components="clr-namespace:MVPStudio_Creative_Agency.Components"
             x:Class="MVPStudio_Creative_Agency.Views.StaffManagementPage"
                Shell.NavBarIsVisible="False"
             Title="StaffManagementPage">



    <Grid FlowDirection="MatchParent" Grid.Column="1" FlexLayout.Basis="Auto">
        <!-- Background image -->

        <Image Source="background.png" Aspect="AspectFill" />

        <FlexLayout Direction="Column" AlignItems="Start" JustifyContent="SpaceEvenly" VerticalOptions="FillAndExpand">




            <StackLayout Orientation="Horizontal" Padding="10,5" Spacing="10"    HorizontalOptions="Start">
                <Image Source="mvp_logo.png"  WidthRequest="100" HeightRequest="100"
               HorizontalOptions="Center" VerticalOptions="Start" Margin="25,-10"/>

                <StackLayout Orientation="Horizontal" Padding="10,5" Spacing="50" Margin="2" >
                    <Label Text="Staff board" FontFamily="Montserrat" FontAttributes="Bold"
                     FontSize="42"   HorizontalOptions="Start"
                     TextColor="#667080"
                     />

                    <Border Stroke="#2b2b2b" StrokeThickness="0" BackgroundColor="#2b2b2b" WidthRequest="350" StrokeShape="RoundRectangle 12,12,12,12" Padding="0" HorizontalOptions="Center" >
                        <SearchBar Placeholder="Search..."  TextColor="#fff" BackgroundColor="#2b2b2b" />
                    </Border>

                    <Button Text="+ Add new staff" HorizontalOptions="Center" Padding="20, 10" CornerRadius="15" BackgroundColor="#61D2D3"
                         FontFamily="Montserrat" TextColor="Black" />
                </StackLayout>
            </StackLayout>


                <components:Nav Grid.Column="0" VerticalOptions="Start" Padding="20"/>


            <!--This is Left Bottom Navbar-->
            <VerticalStackLayout VerticalOptions="FillAndExpand"  Margin="10,40,10,-10" Spacing="10" >
                <Image Source="profile_img.png"
               HeightRequest="60" />
                <Label Text="Jane Doe"
               FontSize="14" TextColor="#2b2b2b" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" />

                <Button Text="Do-Nothing Button" HorizontalOptions="Center" Padding="10" CornerRadius="22"/>

            </VerticalStackLayout>
        </FlexLayout>

        <!--GRID-->
        <HorizontalStackLayout VerticalOptions="FillAndExpand" Margin="200,200,0,0" HorizontalOptions="FillAndExpand" >

            <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                <Border Stroke="#F2F2FD" StrokeThickness="0" BackgroundColor="#F2F2FD"
                        WidthRequest="850" HeightRequest="675"  StrokeShape="RoundRectangle 25,25,25,25" Padding="0"
                        HorizontalOptions="Start" VerticalOptions="FillAndExpand" >
                    <StackLayout ZIndex="3">
                        <!--HEADINGS STAFF & ADMIN-->
                        <HorizontalStackLayout Margin="20,20,0,-10" Spacing="70" >
                            <Label Text=" Staff" FontFamily="Montserrat"
                             FontSize="25" FontAttributes="Bold" TextColor="#667080"
                             VerticalTextAlignment="Start" HorizontalTextAlignment="Center" />

                            <Label Text="Admin" FontFamily="Montserrat"
                              FontSize="25" FontAttributes="Bold" TextColor="#667080"
                             VerticalTextAlignment="Start" HorizontalTextAlignment="Center" />
                        </HorizontalStackLayout>

                        <!--<CollectionView ItemsSource="{Binding Cards}"
                    ItemTemplate="{StaticResource CardTemplate}">
        <CollectionView.ItemsLayout>
            <GridItemsLayout Orientation="Vertical" Span="2" />-->


                        <ScrollView Padding="20" VerticalScrollBarVisibility="Always" >

                            <StackLayout Orientation="Vertical" VerticalOptions="FillAndExpand" Spacing="10">
                                <!--Dont add this! (Cards)-->
                                <CollectionView ItemsSource="{Binding Cards}" SelectionMode="None">

                                    <CollectionView.ItemsLayout>
                                        <GridItemsLayout Orientation="Vertical" Span="2" HorizontalItemSpacing="30" VerticalItemSpacing="30" />
                                    </CollectionView.ItemsLayout>

                                    <CollectionView.ItemTemplate>
                                        <DataTemplate>




                                            <!-- Customize the card content here -->
                                            <Border Stroke="#F2F2FD" StrokeThickness="0" BackgroundColor="#fff"
                                     WidthRequest="350" HeightRequest="250"
                                     StrokeShape="RoundRectangle 25,25,25,25"
                                        Padding="0"
                                                HorizontalOptions="StartAndExpand"
                                                Margin="10, 10" >

                                                <VerticalStackLayout>
                                                    <HorizontalStackLayout>
                                                        <Image Source="profile_img.png" HeightRequest="60" Margin="10,50" HorizontalOptions="StartAndExpand" VerticalOptions="Start"/>
                                                        <VerticalStackLayout Margin="10,50">
                                                            <Label FontFamily="Montserrat"
                             FontSize="25" FontAttributes="Bold" Text="Developer Name" TextColor="#667080"></Label>
                                                            <Label FontFamily="Montserrat"
                             FontSize="18" FontAttributes="Bold" Text="Creative Developer" TextColor="#667080"></Label>

                                                        </VerticalStackLayout>
                                                    </HorizontalStackLayout>
                                                    <HorizontalStackLayout Spacing="-20">
                                                        <VerticalStackLayout>
                                                            <HorizontalStackLayout Margin="20, 0, 0, 0" Spacing="20">
                                                                <Image Source="edit_icon.png"></Image>
                                                                <Label  Text="Total Projects" TextColor="#667080"></Label>
                                                            </HorizontalStackLayout>
                                                            <VerticalStackLayout Margin="100, 0">
                                                                <Label Text="11" TextColor="#667080"></Label>
                                                            </VerticalStackLayout>

                                                        </VerticalStackLayout>
                                                        <VerticalStackLayout >
                                                            <HorizontalStackLayout Margin="0, 0" Spacing="20">
                                                                <Image Source="edit_icon.png"></Image>
                                                                <Label Text="Salary p/m" TextColor="#667080"></Label>

                                                            </HorizontalStackLayout>
                                                            <VerticalStackLayout Margin="45, 0, 0, 0">
                                                                <Label Text="$13 500.00" TextColor="#667080"></Label>
                                                            </VerticalStackLayout>

                                                        </VerticalStackLayout>
                                                    </HorizontalStackLayout>
                                                    <Image Source="edit_icon.png" Margin="300,10,0,0"></Image>
                                                </VerticalStackLayout>
                                            </Border>


                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>
                            </StackLayout>
                        </ScrollView>

                    </StackLayout>


                </Border>

            </StackLayout>

            <HorizontalStackLayout >

                <Border Stroke="#2b2b2b" StrokeThickness="0" BackgroundColor="#F2F2FD"
                        WidthRequest="450" HeightRequest="675"  StrokeShape="RoundRectangle 25,25,25,25"  Padding="0"
                        HorizontalOptions="End"  Margin="50,0,0,0">

                    <VerticalStackLayout >
                        <!--   Title Stack-->
                        <HorizontalStackLayout  Spacing="60" Margin="0,20,0,0" HorizontalOptions="CenterAndExpand">
                            <Label Text=" Employee Overview" FontFamily="Montserrat"
                             FontSize="30" FontAttributes="Bold" TextColor="#667080"
                             VerticalTextAlignment="Start" HorizontalTextAlignment="Start" />

                            <Image Source="edit_icon.png"
                         HeightRequest="60"  VerticalOptions="Start" HorizontalOptions="EndAndExpand" Margin="0,-13" />

                        </HorizontalStackLayout>


                        <!--Staff Profile Picture-->
                        <VerticalStackLayout VerticalOptions="FillAndExpand"  Margin="10,20,10,10" Spacing="8" >
                            <HorizontalStackLayout HorizontalOptions="Center">
                                <Image Source="profile_img.png" HeightRequest="90" />

                            </HorizontalStackLayout>

                            <Label Text="Shanre Scheepers" HeightRequest="30"
               FontFamily="Montserrat" FontAttributes="Bold"
                              FontSize="24" TextColor="#2b2b2b" VerticalTextAlignment="Center" HorizontalTextAlignment="Start"
                              Margin="70,0,0,0"/>

                            <Label Text="shanrescheepers@gmail.com" 
                             FontSize="16" TextColor="#2b2b2b" VerticalTextAlignment="Center"
                             HorizontalTextAlignment="Start"
                               Margin="70,0,0,0"/>

                            <Label Text="Creative Developer"
                             FontSize="18" TextColor="#3B2765" FontFamily="Montserrat" FontAttributes="Bold" VerticalTextAlignment="Center"
                             HorizontalTextAlignment="Start"
                               Margin="70,0,0,0"/>

                            <HorizontalStackLayout Margin="70,20,0,0" >
                                <Label Text="Salary"
                             FontSize="16" TextColor="#2b2b2b"   />
                            </HorizontalStackLayout>

                            <HorizontalStackLayout Margin="70,8,0,0" Spacing="30">
                                <Border Stroke="#F2F2FD" StrokeThickness="1"  Background="#fff"
                                   StrokeShape="RoundRectangle 5,5,5,5"  HorizontalOptions="Start"  WidthRequest="200">
                                    <Entry x:Name="entry"  Placeholder="Enter salary"   />
                                </Border>

                                <Border Stroke="#F2F2FD" StrokeThickness="1" Background="#fff"
                                   StrokeShape="RoundRectangle 5,5,5,5"   WidthRequest="50">
                                    <Entry x:Name="entry2"  Placeholder="p/m"   Background="#fff" HorizontalOptions="End" />
                                </Border>
                            </HorizontalStackLayout>

                            <HorizontalStackLayout Spacing="40" Margin="60,20,0,10" HorizontalOptions="StartAndExpand">
                                <Label Text="All projects"
                             FontSize="18" TextColor="#667080" VerticalTextAlignment="Start"
                             HorizontalTextAlignment="Start" FontFamily="Montserrat" FontAttributes="Bold" 
                             />

                                <Label Text="Current"
                             FontSize="18" TextColor="#667080" VerticalTextAlignment="Start"
                             HorizontalTextAlignment="Start" FontFamily="Montserrat" FontAttributes="Bold" 
                             />

                                <Label Text="Closed"
                             FontSize="18" TextColor="#667080" VerticalTextAlignment="Start"
                             HorizontalTextAlignment="Start" FontFamily="Montserrat" FontAttributes="Bold" 
                             />

                            </HorizontalStackLayout>

                            <!--<Button Text="Do-Nothing Button" HorizontalOptions="Center" Padding="10" CornerRadius="22"/>-->
                            <StackLayout >
                                <!--ScrollView Card-->

                                <!--ScrollView Employee Overview-->
                                <ScrollView Padding="20" VerticalScrollBarVisibility="Always" HeightRequest="200" VerticalOptions="FillAndExpand">

                                    <StackLayout Orientation="Vertical" VerticalOptions="FillAndExpand" Spacing="10">
                                        <!--Dont add this! (Cards)-->
                                        <CollectionView ItemsSource="{Binding Cards}" SelectionMode="None">

                                            <CollectionView.ItemsLayout>
                                                <GridItemsLayout Orientation="Vertical" Span="2"
                                                         HorizontalItemSpacing="30" VerticalItemSpacing="30" />
                                            </CollectionView.ItemsLayout>

                                            <CollectionView.ItemTemplate>
                                                <DataTemplate>

                                                    <!-- Customize the card content here -->
                                                    <Border Stroke="#F2F2FD" StrokeThickness="0" BackgroundColor="#fff"
                                     WidthRequest="350" HeightRequest="150"
                                     StrokeShape="RoundRectangle 25,25,25,25"
                                        Padding="0"
                                                HorizontalOptions="StartAndExpand"
                                                Margin="10, 10" >

                                                        <VerticalStackLayout>
                                                            <VerticalStackLayout>
                                                                <Label FontFamily="Montserrat" HorizontalOptions="CenterAndExpand"
                                       FontSize="14" FontAttributes="Bold" Text="Developer Name"
                                       TextColor="#667080" Margin="10,10,0,0"></Label>
                                                                <Image Source="profile_img.png" HeightRequest="40" Margin="10,10,0,10" HorizontalOptions="CenterAndExpand"
                                       VerticalOptions="CenterAndExpand"/>
                                                            </VerticalStackLayout>


                                                            <HorizontalStackLayout Spacing="40" HorizontalOptions="Start" Margin="20,5,0,0" HeightRequest="40" >
                                                         
                                                                <Border Stroke="#ABfffABF6" StrokeThickness="0"  Background="#fff"
                                   StrokeShape="RoundRectangle 5,5,5,5"   WidthRequest="50">

                                                                  <HorizontalStackLayout HorizontalOptions="Center" VerticalOptions="CenterAndExpand">
                                                                               <Image Source="edit_icon.png" Margin="0,0,0,0"></Image>
                                                                          <Label BackgroundColor="#fff" TextColor="#2b2b2b" Text="End Date, 2023" VerticalOptions="Center"
                                                                       WidthRequest="100"  HeightRequest="40"  HorizontalOptions="Center"></Label>

                                                                    </HorizontalStackLayout>
                                                                </Border>



                                                            </HorizontalStackLayout>
                                                            <Image Source="edit_icon.png" HorizontalOptions="End" Margin="0,0,0,0"></Image>
                                                        </VerticalStackLayout>
                                                    </Border>


                                                </DataTemplate>
                                            </CollectionView.ItemTemplate>
                                        </CollectionView>
                                    </StackLayout>
                                </ScrollView>

                            </StackLayout>




                        </VerticalStackLayout>
                    </VerticalStackLayout>


                </Border>

            </HorizontalStackLayout>

        </HorizontalStackLayout>
    </Grid>
</ContentPage>
