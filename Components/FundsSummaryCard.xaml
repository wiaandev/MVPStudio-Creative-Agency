<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:subComponents="clr-namespace:MVPStudio_Creative_Agency.Components"
             x:Class="MVPStudio_Creative_Agency.Components.FundsSummaryCard"
             
             >
 <Frame
        CornerRadius="15"
        BackgroundColor="{DynamicResource Purple}"
        BorderColor="Transparent"
        >

        <FlexLayout JustifyContent="SpaceBetween" AlignItems="Center" Direction="Column">

            <VerticalStackLayout FlexLayout.AlignSelf="Start">
                <Label Text="MVP Funds" FontFamily="Montserrat-Bold" FontSize="28" TextColor="{DynamicResource White}"/>
                <Label Text="Overview" FontFamily="Hind-Light" FontSize="16" TextColor="{DynamicResource White}"/>
            </VerticalStackLayout>

            <Frame CornerRadius="10" HorizontalOptions="Center" VerticalOptions="Center" BackgroundColor="{DynamicResource White}" BorderColor="Transparent">
                <Label Text="R 650 000.00" FontFamily="Montserrat-Bold" TextColor="{DynamicResource Black}" FontSize="28"/>
            </Frame>
            
            

            <HorizontalStackLayout Spacing="10" Margin="0,20,0,0" HorizontalOptions="Center">
            </HorizontalStackLayout>

            </FlexLayout>
    </Frame>
</ContentView>

